<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.popo.dailyopen.activity.SettingsActivity">

    <TextView
        android:id="@+id/settings_hits_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/settingactivity_hits_notification_title_size"
        android:textStyle="bold"
        android:text="@string/notification_hit_counting_title_string" />

    <TextView
        android:id="@+id/settings_hits_notification_detail"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_below="@id/settings_hits_notification_title"
        android:textSize="@dimen/settingactivity_hits_notification_detail_size"
        android:text="@string/notification_hit_counting_detail_string"/>

    <Switch
        android:id="@+id/settings_hits_notification_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settingactivity_hits_notification_switch_margin_top"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/settingactivity_hits_notification_switch_margin_right"/>

    <ImageView
        android:id="@+id/settings_separator1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_below="@id/settings_hits_notification_detail"
        android:layout_marginTop="@dimen/settingactivity_separator_margin_top"
        android:layout_marginLeft="@dimen/settingactivity_separator_margin_horizontal"
        android:layout_marginRight="@dimen/settingactivity_separator_margin_horizontal"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:background="@color/settings_separator_color"/>

</RelativeLayout>
